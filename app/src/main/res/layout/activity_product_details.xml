<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pages.productdetail.ProductDetailsActivity">

    <!-- ScrollView để làm cho nội dung cuộn được -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- FrameLayout để đặt imgBack1 đè lên book_image -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="400dp">

                <ImageView
                    android:id="@+id/book_image"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/dai_viet_su_ky_toan_thu"
                    android:contentDescription="Book Image"/>

                <ImageView
                    android:id="@+id/imgBack1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="20dp"
                    android:src="@drawable/back"
                    android:contentDescription="Back Button"/>
            </FrameLayout>

            <!-- Phần thông tin sách -->
            <LinearLayout
                android:id="@+id/book_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/book_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đại Việt sử ký toàn thư"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lịch Sử"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"/>

                <RatingBar
                    android:id="@+id/book_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="4.9"
                    android:stepSize="0.1" />

                <TextView
                    android:id="@+id/book_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100.000đ"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvAuthor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tác giả: Nguyễn Bình Khiêm"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/book_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quần áo thể thao đã không còn thuộc về văn hóa nữa, nó không còn là một phong cách indie hay ghép nối như trước đây. Thể thao hiện nay là thời trang. Áo phông có kiểu dáng và size lớn hơn, có thể cần phải lấy khuyết để phù hợp."
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/book_reviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="83 đánh giá"
                    android:layout_marginTop="20dp"
                    android:textSize="20sp" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_add_to_cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thêm vào giỏ hàng"
                android:layout_margin="16dp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
