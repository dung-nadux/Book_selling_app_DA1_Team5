    <!-- Thẻ thanh toán ví điện tử MoMo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Hình ảnh MoMo -->
        <ImageView
            android:id="@+id/imgLogoMomo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="MoMo Logo"
            android:src="@drawable/logo_momo" />

        <!-- Tên ví MoMo -->
        <LinearLayout
            android:id="@+id/llWallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNameMomo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Ví MoMo"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvMoneyWallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="20000VNĐ"
                android:textSize="15dp" />

        </LinearLayout>
    </LinearLayout>
    </LinearLayout>