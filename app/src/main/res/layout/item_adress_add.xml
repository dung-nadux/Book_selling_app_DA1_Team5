<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm địa chỉ"
        android:gravity="center_horizontal"
        android:textSize="20dp"/>

    <RadioGroup
        android:id="@+id/rgAdress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radio_button_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhà riêng" />

        <RadioButton
            android:id="@+id/radio_button_office"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Văn phòng" />

    </RadioGroup>

    <EditText
        android:id="@+id/edEnterAdress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:layout_marginTop="10dp"
        android:hint="Nhập địa chỉ nhận hàng"/>

</LinearLayout>