<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="15dp"
    android:id="@+id/item_product_home"
    android:background="@drawable/bg_item_product_home">

        <ImageView
            android:id="@+id/img_product_home"
            android:layout_width="155dp"
            android:layout_height="152dp"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:src="@drawable/img_s24"/>
        <TextView
            android:id="@+id/tv_name_product_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Samsung Galaxy S24 Ultra"
            android:layout_margin="8dp"
            android:textAlignment="center"
            android:fontFamily="sans-serif-medium"/>
        <TextView
            android:id="@+id/tv_price_product_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="25.990.000Ä‘"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"
            android:textColor="#FF0000"
            android:textStyle="bold"
            android:textSize="16dp"/>

</LinearLayout>