<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".fragments.HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/btnProfile"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="25dp"
            android:layout_gravity="start"
            android:src="@drawable/ic_user"/>
        <ImageView
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_text_logo"/>

        <ImageView
            android:id="@+id/btnSearchHome"
            android:layout_width="18dp"
            android:layout_height="24dp"
            android:layout_gravity="end"
            android:layout_margin="25dp"
            android:src="@drawable/ic_search" />
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="15dp"
        android:orientation="vertical"
        android:background="#F0F7FF">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:src="@drawable/img_banner"/>
        <LinearLayout
            android:id="@+id/customTabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/tab_phone"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/bt_phone_on"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
            <ImageView
                android:id="@+id/tab_laptop"
                android:layout_width="102dp"
                android:layout_height="40dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/bt_laptop_off"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
            <ImageView
                android:id="@+id/tab_accessory"
                android:layout_width="119dp"
                android:layout_height="40dp"
                android:src="@drawable/bt_accessory_off"/>
        </LinearLayout>
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"/>


    </LinearLayout>

</LinearLayout>