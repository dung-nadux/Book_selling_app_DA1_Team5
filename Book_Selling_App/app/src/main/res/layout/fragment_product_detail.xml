<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.fragment_user.ProductDetailFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="110dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imgProductDetail"
                android:layout_width="wrap_content"
                android:layout_height="260dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/img_s24"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="25.990.000 đ"
                android:textSize="24sp"
                android:textColor="#FF0000"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/txtProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="10dp"
                android:text="Đại Việt sử ký toàn thư"
                android:textSize="24sp"
                android:fontFamily="sans-serif-medium"/>
            <TextView
                android:id="@+id/txtProductAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginBottom="10dp"
                android:text="Nhiều tác giả"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"/>
            <TextView
                android:id="@+id/txtProductDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="15dp"
                android:lineHeight="23dp"
                android:text="Chiếc S24 Ultra sở hữu thiết kế sang trọng và tinh tế trong từng chi tiết, đánh dấu sự đổi mới đáng kể so với các thế hệ trước. Điểm nổi bật đầu tiên là việc sử dụng khung viền được làm từ Titanium - một vật liệu nổi tiếng "
                android:textSize="15sp"
                android:fontFamily="sans-serif-light"/>
            <TextView
                android:id="@+id/txtStock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="15dp"
                android:text="Số lượng: 20"/>
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="64dp"
                android:layout_margin="15dp"
                android:gravity="center_vertical"
                android:background="@drawable/bg_quantity_detail">
                <ImageView
                    android:id="@+id/btnMinusQuantity"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/ic_minus_quantity"/>
                <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
                <TextView
                    android:id="@+id/txtQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="02"
                    android:textColor="#4BA753"
                    android:textSize="24sp"
                    android:textStyle="bold"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
                <ImageView
                    android:id="@+id/btnPlusQuantity"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/ic_add_quantity"/>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
    <ImageView
        android:id="@+id/btnBackDetail"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_margin="22dp"
        android:src="@drawable/ic_back"/>
    <ImageView
        android:id="@+id/btnAddFavourite"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="end"
        android:layout_margin="22dp"
        android:src="@drawable/ic_add_favourite"/>
    <LinearLayout
        android:id="@+id/btnAddToCart"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/bg_bt_confirm"
        android:layout_gravity="bottom">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thêm vào giỏ hàng"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="22dp"/>
    </LinearLayout>

</FrameLayout>